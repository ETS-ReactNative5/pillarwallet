{
  "name": "pillarwallet",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "clean": "rimraf node_modules ios/build ios/Pods ios/Podfile.lock",
    "start": "react-native start --reset-cache",
    "android": "react-native run-android --variant=devDebug",
    "ios": "react-native run-ios",
    "generate:ios:ipa": "mkdir  ./ios/build/Build/Products/Release-iphoneos/Payload && cp -R ./ios/build/Build/Products/Release-iphoneos/pillarwallet.app ./ios/build/Build/Products/Release-iphoneos/Payload && cd ./ios/build/Build/Products/Release-iphoneos/ && /usr/bin/zip -r  pillarwallet.ipa Payload && rm -rf Payload && mv pillarwallet.ipa ../../../..",
    "build:ios": "react-native bundle --entry-file='index.js' --bundle-output='./ios/pillarwallet/main.jsbundle' --dev=false --platform='ios' --assets-dest='./ios'",
    "build:android": "react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/src/main/res",
    "test": "jest --maxWorkers=10",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "flow": "flow",
    "flow-stop": "flow stop",
    "flow-typed": "flow-typed install",
    "validate": "run-s flow test lint",
    "jest": "jest --colors",
    "jest-watch": "jest --colors --watchAll",
    "jest-update": "jest --colors -u",
    "postinstall": "./node_modules/.bin/rn-nodeify --install --hack --yarn && mv shim.js src/utils && patch-package && rndebugger-open && jetifier -r",
    "precommit": "yarn run validate",
    "build-thread-ios": "node node_modules/react-native/local-cli/cli.js bundle --dev false --assets-dest ./ios --entry-file index.thread.js --platform ios --bundle-output ./ios/index.thread.jsbundle",
    "build-thread-android": "node node_modules/react-native/local-cli/cli.js bundle --dev false --assets-dest ./android/app/src/main/res/ --entry-file index.thread.js --platform android --bundle-output ./android/app/src/main/assets/threads/index.thread.bundle"
  },
  "dependencies": {
    "browserify-zlib": "~0.1.4",
    "buffer": "^4.9.1",
    "react-native-crypto": "^2.1.0",
    "dns.js": "^1.0.1",
    "events": "^1.0.0",
    "@tradle/react-native-http": "^2.0.0",
    "https-browserify": "~0.0.0",
    "react-native-os": "^1.0.1",


    "add": "^2.0.6",
    "asyncstorage-down": "^4.0.1",
    "crypto-js": "^3.1.9-1",
    "pouchdb-adapter-asyncstorage": "^6.4.1",
    "process": "^0.11.0",
    "punycode": "^1.2.4",
    "querystring-es3": "~0.2.0",
    "react": "^16.8.6",
    "react-native": "0.59.10",
    "react-native-canvas": "^0.1.20",
    "react-native-gesture-handler": "1.4.1",
    "react-native-level-fs": "^3.0.0",
    "react-native-randombytes": "^3.5.2",
    "react-native-safe-area-context": "^0.4.1",
    "react-native-safe-area-view": "^1.0.0",
    "react-native-scrypt": "^1.0.0",
    "react-native-tcp": "^3.2.1",
    "react-native-udp": "^2.6.0",
    "react-navigation-fluid-transitions": "^0.2.0",
    "react-timer-mixin": "^0.13.4",
    "readable-stream": "1.0.33",
    "stream-browserify": "^1.0.0",
    "string_decoder": "~0.10.25",
    "timers-browserify": "^1.0.1",
    "util": "~0.10.3",
    "yarn": "^1.7.0"
  },
  "devDependencies": {
    "@babel/preset-flow": "^7.0.0",
    "babel-runtime": "7.0.0-beta.3",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "flow-bin": "0.70.0",
    "flow-typed": "^2.4.0",
    "husky": "^1.1.3",
    "npm-run-all": "^4.1.5",
    "prop-types": "^15.6.1",
    "react-dom": "^16.3.0-alpha.1",
    "react-native-debugger-open": "^0.3.19",
    "rimraf": "^2.6.3",
    "run-s": "^0.0.0"
  },
  "jest": {
    "preset": "react-native",
    "verbose": true,
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js"
    },
    "modulePaths": [
      "<rootDir>/src/"
    ],
    "testRegex": "\\.test\\.js$",
    "testResultsProcessor": "./node_modules/jest-html-reporter",
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/reports/**",
      "!**/flow-typed/**"
    ],
    "coverageReporters": [
      "lcov"
    ],
    "coverageDirectory": "./reports",
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native-safe-area-view|@react-native-community/async-storage/lib|react-native-image-view|react-native-fabric|react-native|react-native-modal|react-native-cached-image|concat-color-matrices|rn-color-matrices|react-native-touch-id|react-native-color-matrix-image-filters|react-native-htmlview|react-native-video|react-native-shadow|react-native-background-timer|react-native-share|react-native-communications|react-native-qrcode|react-native-gifted-chat|react-native-svg|@expo/react-native-action-sheet|react-native-parsed-text|react-native-camera|react-native-intercom|react-native-firebase|react-native-animatable|react-native-vector-icons|react-native-linear-gradient|react-native-invertible-scroll-view|react-native-scrollable-mixin|react-native-device-info|react-native-lightbox|react-native-keyboard-aware-scroll-view|react-navigation|react-navigation-stack|react-native-screens|native-base-shoutem-theme|react-native-easy-grid|react-native-drawer|react-native-scrypt|react|pouchdb-react-native|react-navigation-redux-helpers|pouchdb-core|pouchdb-adapter-asyncstorage|react-native-maps|react-native-iphone-x-helper|tcomb-form-native|react-navigation-tabs|native-base|react-native-sentry|react-native-image-crop-picker|react-navigation-fluid-transitions|react-native-qrcode-svg|react-native-extra-dimensions-android|react-native-cached-image|react-native-emoji|react-native-collapsible|react-native-webview|react-native-swiper|@react-navigation/.*/))"
    ],
    "setupTestFrameworkScriptFile": "./src/testUtils/jestSetup.js",
    "setupFiles": [
      "./node_modules/react-native-gesture-handler/jestSetup.js"
    ],
    "moduleNameMapper": {
      "^image![a-zA-Z0-9$_-]+$": "GlobalImageStub",
      "^[@./a-zA-Z0-9$_-]+\\.(png|gif)$": "RelativeImageStub"
    }
  },
  "jest-html-reporter": {
    "pageTitle": "Jest results",
    "outputPath": "./reports/jest/test-report.html",
    "includeFailureMsg": true
  },
  "react-native": {
    "fs": "react-native-level-fs",
    "_stream_transform": "readable-stream/transform",
    "_stream_readable": "readable-stream/readable",
    "_stream_writable": "readable-stream/writable",
    "_stream_duplex": "readable-stream/duplex",
    "_stream_passthrough": "readable-stream/passthrough",
    "dgram": "react-native-udp",
    "stream": "stream-browserify",
    "crypto": "react-native-crypto",
    "vm": "vm-browserify",
    "dns": "dns.js",
    "zlib": "browserify-zlib",
    "console": "console-browserify",
    "constants": "constants-browserify",
    "net": "react-native-tcp",
    "domain": "domain-browser",
    "http": "@tradle/react-native-http",
    "https": "https-browserify",
    "os": "react-native-os",
    "path": "path-browserify",
    "querystring": "querystring-es3",
    "timers": "timers-browserify",
    "tty": "tty-browserify",
    "tls": false
  },
  "rnpm": {
    "assets": [
      "./src/assets/fonts/"
    ]
  },
  "browser": {
    "fs": "react-native-level-fs",
    "_stream_transform": "readable-stream/transform",
    "_stream_readable": "readable-stream/readable",
    "_stream_writable": "readable-stream/writable",
    "_stream_duplex": "readable-stream/duplex",
    "_stream_passthrough": "readable-stream/passthrough",
    "dgram": "react-native-udp",
    "stream": "stream-browserify",
    "crypto": "react-native-crypto",
    "vm": "vm-browserify",
    "dns": "dns.js",
    "zlib": "browserify-zlib",
    "console": "console-browserify",
    "constants": "constants-browserify",
    "net": "react-native-tcp",
    "domain": "domain-browser",
    "http": "@tradle/react-native-http",
    "https": "https-browserify",
    "os": "react-native-os",
    "path": "path-browserify",
    "querystring": "querystring-es3",
    "timers": "timers-browserify",
    "tty": "tty-browserify",
    "tls": false
  },
}
