<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="colorPrimaryDark">#007AFF</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowBackground">?attr/backgroundColor</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="LightTheme" parent="AppTheme">
        <item name="textColor">#0A1427</item>
        <item name="colorAccent">#007AFF</item>
        <item name="backgroundColor">#FAFAFA</item>
        <item name="splashIcon">@drawable/logo_light_mode</item>
    </style>

    <style name="DarkTheme" parent="AppTheme">
        <item name="textColor">#B1BBD9</item>
        <item name="colorAccent">#007AFF</item>
        <item name="backgroundColor">#222C46</item>
        <item name="splashIcon">@drawable/logo_dark_mode</item>
    </style>
</resources>
